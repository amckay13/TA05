<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.delante.cmsc434projdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:background="@color/background">

        <activity
            android:name=".LoginActivity"
            android:label="Log In">
        </activity>

        <activity
            android:name=".ProfileSelectAcivityReal"
            android:label="Pick a Profile"
            android:windowSoftInputMode="stateVisible|adjustResize">
        </activity>

        <activity
            android:name=".ChildPlayModeActivity"
            android:label="Child Play Mode"
            android:windowSoftInputMode="stateVisible|adjustResize">
        </activity>

        <activity
            android:name=".ParentModeActivity"
            android:label="Parent Mode"
            android:windowSoftInputMode="stateVisible|adjustResize">
        </activity>

        <activity
            android:name=".LandingPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ParentSettingsActivity">
        </activity>

        <activity
            android:name=".ParentInfoActivity">
        </activity>

        <activity
            android:name=".StoryPickerPageActivity">
        </activity>

        <activity
            android:name=".StoryPageActivity"
            android:label="Animals"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>


        <activity
            android:name=".StoryPageRemoteActivity"
            android:label="Animals - Remote Play"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".ParentStoreActivity">
        </activity>

        <activity
            android:name=".Story2PageActivity"
            android:label="Shapes and Colors"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>


        <uses-permission android:name="android.permission.INTERNET" />
    </application>

</manifest>
